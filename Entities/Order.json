{
  "name": "Order",
  "type": "object",
  "properties": {
    "order_number": {
      "type": "string",
      "description": "Unique order number"
    },
    "user_email": {
      "type": "string",
      "description": "Email of the user who placed the order"
    },
    "delivery_method": {
      "type": "string",
      "enum": [
        "drone",
        "pickup"
      ],
      "description": "Delivery method chosen"
    },
    "delivery_address": {
      "type": "string",
      "description": "Delivery address for drone delivery"
    },
    "pickup_location": {
      "type": "string",
      "description": "Pickup location name"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "confirmed",
        "preparing",
        "ready",
        "in_transit",
        "delivered",
        "cancelled"
      ],
      "default": "pending",
      "description": "Current order status"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "menu_item_id": {
            "type": "string"
          },
          "menu_item_name": {
            "type": "string"
          },
          "dining_location_name": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          },
          "price": {
            "type": "number"
          },
          "special_instructions": {
            "type": "string"
          }
        }
      },
      "description": "Items in the order"
    },
    "total_amount": {
      "type": "number",
      "description": "Total order amount"
    },
    "estimated_time": {
      "type": "string",
      "description": "Estimated delivery/pickup time"
    },
    "placed_at": {
      "type": "string",
      "format": "date-time",
      "description": "When order was placed"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes for the order"
    }
  },
  "required": [
    "order_number",
    "delivery_method",
    "total_amount"
  ]
}